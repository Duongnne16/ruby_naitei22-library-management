<%= form_with model: [:admin, publisher], local: true, class: "needs-validation" do |f| %>
  <% if publisher.errors.any? %>
    <div class="alert alert-danger">
      <h6><%= t("admin.publishers.form.errors", count: publisher.errors.count) %></h6>
      <ul>
        <% publisher.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, t("admin.publishers.attributes.name"), class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :address, t("admin.publishers.attributes.address"), class: "form-label" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :phone_number, t("admin.publishers.attributes.phone_number"), class: "form-label" %>
    <%= f.text_field :phone_number, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, t("admin.publishers.attributes.email"), class: "form-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :website, t("admin.publishers.attributes.website"), class: "form-label" %>
    <%= f.text_field :website, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit submit_text, class: "btn btn-success btn-sm w-auto" %>
    <%= link_to t("admin.publishers.actions.cancel"), cancel_path, class: "btn btn-secondary" %>
  </div>
<% end %>
