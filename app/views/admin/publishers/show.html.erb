<div class="card shadow-sm p-4">
    <div class="col-md-8">
    <h3 class="mb-3 text-primary"><%= @publisher.name %></h3>

    <p><strong><%= t("admin.publishers.attributes.address") %>:</strong>
    <%= @publisher.address.presence || t("admin.publishers.placeholders.no_address") %></p>

    <p><strong><%= t("admin.publishers.attributes.phone_number") %>:</strong>
    <%= @publisher.phone_number.presence || t("admin.publishers.placeholders.no_phone") %></p>

    <p><strong><%= t("admin.publishers.attributes.email") %>:</strong>
    <%= @publisher.email.presence || t("admin.publishers.placeholders.no_email") %></p>

    <p><strong><%= t("admin.publishers.attributes.website") %>:</strong>
    <% if @publisher.website.present? %>
        <%= link_to @publisher.website, @publisher.website, target: "_blank", rel: "noopener" %>
    <% else %>
        <%= t("admin.publishers.placeholders.no_website") %>
    <% end %>
    </p>

    <p><strong><%= t("admin.publishers.attributes.created_at") %>:</strong>
    <%= @publisher.created_at.strftime(Settings.datetime_formats.default) %></p>

    <div class="mt-4 d-flex gap-2">
    <%= link_to t("admin.publishers.actions.back"), admin_publishers_path, class: "btn btn-secondary" %>
    <%= link_to t("admin.publishers.actions.edit"), edit_admin_publisher_path(@publisher), class: "btn btn-success" %>
    <%= link_to t("admin.publishers.actions.delete"), admin_publisher_path(@publisher),
        data: { turbo_method: :delete },
        class: "btn btn-danger",
        onclick: "return confirm('#{t("admin.publishers.confirmations.delete")}');" %>
    </div>
  </div>
</div>
