<%= form_with model: [:admin, book], local: true, class: "needs-validation", html: { multipart: true } do |f| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <h6><%= t("admin.books.form.errors", count: book.errors.count) %></h6>
      <ul>
        <% book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, t("admin.books.attributes.title"), class: "form-label" %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, t("admin.books.attributes.description"), class: "form-label" %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :publication_year, t("admin.books.attributes.publication_year"), class: "form-label" %>
    <%= f.number_field :publication_year, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :total_quantity, t("admin.books.attributes.total_quantity"), class: "form-label" %>
    <%= f.number_field :total_quantity, class: "form-control", min: 0 %>
  </div>

  <div class="mb-3">
    <%= f.label :available_quantity, t("admin.books.attributes.available_quantity"), class: "form-label" %>
    <%= f.number_field :available_quantity, class: "form-control", min: 0 %>
  </div>

  <div class="mb-3">
    <%= f.label :author_id, t("admin.books.attributes.author"), class: "form-label" %>
    <%= f.collection_select :author_id, Author.all, :id, :name, { prompt: t("admin.books.prompts.select_author") }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :publisher_id, t("admin.books.attributes.publisher"), class: "form-label" %>
    <%= f.collection_select :publisher_id, Publisher.all, :id, :name, { prompt: t("admin.books.prompts.select_publisher") }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :image, t("admin.books.attributes.image"), class: "form-label" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <% if book.image.attached? %>
    <div class="mb-3">
      <p><strong><%= t("admin.books.attributes.current_image") %>:</strong></p>
      <%= image_tag book.image.variant(resize_to_limit: [150, 150]), class: "img-thumbnail" %>
    </div>
  <% end %>

  <div class="d-flex gap-2">
    <%= f.submit submit_text, class: "btn btn-success btn-sm w-auto" %>
    <%= link_to t("admin.books.actions.cancel"), cancel_path, class: "btn btn-secondary" %>
  </div>
<% end %>
