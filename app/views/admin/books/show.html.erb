<div class="card shadow-sm p-4">
  <div class="row">
    <!-- Cột trái: Ảnh bìa sách -->
    <div class="col-md-4 text-center">
      <% if @book.image.attached? %>
        <%= image_tag @book.image.variant(resize_to_limit: [250, 350]),
              class: "img-fluid rounded shadow-sm mb-3" %>
      <% else %>
        <div class="text-muted fst-italic">
          <%= t("admin.books.placeholders.no_cover_image") %>
        </div>
      <% end %>
    </div>

    <!-- Cột phải: Thông tin chi tiết -->
    <div class="col-md-8">
      <h3 class="mb-3 text-primary"><%= @book.title %></h3>

      <p><strong><%= t("admin.books.attributes.description") %>:</strong>
        <%= @book.description.presence || t("admin.books.placeholders.no_description") %></p>

      <p><strong><%= t("admin.books.attributes.publication_year") %>:</strong> <%= @book.publication_year %></p>
      <p><strong><%= t("admin.books.attributes.total_quantity") %>:</strong> <%= @book.total_quantity %></p>
      <p><strong><%= t("admin.books.attributes.available_quantity") %>:</strong> <%= @book.available_quantity %></p>
      <p><strong><%= t("admin.books.attributes.borrow_count") %>:</strong> <%= @book.borrow_count %></p>
      <p><strong><%= t("admin.books.attributes.author") %>:</strong> <%= @book.author.name %></p>
      <p><strong><%= t("admin.books.attributes.publisher") %>:</strong> <%= @book.publisher.name %></p>
      <p><strong><%= t("admin.books.attributes.created_at") %>:</strong>
        <%= @book.created_at.strftime("%d-%m-%Y %H:%M") %></p>

      <div class="mt-4 d-flex gap-2">
        <%= link_to t("admin.books.actions.back"), admin_books_path, class: "btn btn-secondary" %>
        <%= link_to t("admin.books.actions.edit"), edit_admin_book_path(@book), class: "btn btn-success" %>
        <%= link_to t("admin.books.actions.delete"), admin_book_path(@book),
            data: { turbo_method: :delete },
            class: "btn btn-danger",
            onclick: "return confirm('#{t("admin.books.confirmations.delete")}');" %>
      </div>
    </div>
  </div>
</div>
