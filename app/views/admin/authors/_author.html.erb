<tr>
  <td><%= author.id %></td>
  <td class="text-start"><%= author.name %></td>
  <td><%= author.created_at.strftime("%d/%m/%Y %H:%M") %></td>
  <td>
    <%= link_to t("admin.authors.actions.view"), admin_author_path(author), class: "btn btn-sm btn-primary me-1" %>
    <%= link_to t("admin.authors.actions.edit"), edit_admin_author_path(author), class: "btn btn-sm btn-success me-1" %>
    <%= link_to t("admin.authors.actions.delete"), admin_author_path(author),
                data: { turbo_method: :delete },
                onclick: "return confirm('#{t("admin.authors.confirmations.delete")}');",
                class: "btn btn-sm btn-danger" %>
  </td>
</tr>
