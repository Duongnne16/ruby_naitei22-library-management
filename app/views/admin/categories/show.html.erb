<div class="card shadow-sm p-4">
  <div class="col-md-8">
    <h3 class="mb-3 text-primary"><%= @category.name %></h3>

    <p>
      <strong><%= t("admin.categories.attributes.description") %>:</strong>
      <%= @category.description.presence || t("admin.categories.placeholders.no_description") %>
    </p>

    <p>
      <strong><%= t("admin.categories.attributes.created_at") %>:</strong>
      <%= @category.created_at.strftime(Settings.datetime_formats.default) %>
    </p>

    <p>
      <strong><%= t("admin.categories.attributes.updated_at") %>:</strong>
      <%= @category.updated_at.strftime(Settings.datetime_formats.default) %>
    </p>

    <div class="mt-4 d-flex gap-2">
      <%= link_to t("admin.categories.actions.back"), admin_categories_path, class: "btn btn-secondary" %>
      <%= link_to t("admin.categories.actions.edit"), edit_admin_category_path(@category), class: "btn btn-success" %>
      <%= link_to t("admin.categories.actions.delete"), admin_category_path(@category),
                  data: { turbo_method: :delete },
                  class: "btn btn-danger",
                  onclick: "return confirm('#{t("admin.categories.confirmations.delete")}');" %>
    </div>
  </div>
</div>
